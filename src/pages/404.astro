---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found" description="The requested page could not be found.">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold text-gray-300 mb-4">404</h1>
    <h2 class="text-3xl font-semibold mb-6">Page Not Found</h2>
    <p class="text-gray-600 mb-8 text-xl">
      Sorry, the page you're looking for doesn't exist.
    </p>
    <div class="space-y-4">
      <p class="text-gray-600">You might want to check out:</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="text-blue-600 hover:text-blue-800 underline">Home</a>
        <a href="/publications" class="text-blue-600 hover:text-blue-800 underline">Publications</a>
        <a href="/teaching" class="text-blue-600 hover:text-blue-800 underline">Teaching</a>
        <a href="/software" class="text-blue-600 hover:text-blue-800 underline">Software</a>
      </div>
    </div>
  </div>
</Layout>