---
export interface Props {
  title: string;
  activePage?: string;
  description?: string;
  keywords?: string;
}
const { 
  title, 
  activePage = '', 
  description = 'Eric Pacuit is a Professor of Philosophy at the University of Maryland specializing in logic, social choice theory, game theory, and formal epistemology.',
  keywords = 'Eric Pacuit, modal logic, social choice theory, game theory, formal epistemology, philosophy, University of Maryland'
} = Astro.props;

const fullTitle = title === 'Eric Pacuit' ? title : `${title} | Eric Pacuit`;
const siteUrl = 'https://ericpacuit.org'; // Update with your actual domain
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>
  <meta name="author" content="Eric Pacuit">
  
  <!-- Favicon -->
  <link rel="icon" type="image/jpeg" href="/images/me4.jpg">
  <link rel="apple-touch-icon" href="/images/me4.jpg">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={currentUrl}>
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`${siteUrl}/images/me4.jpg`}>
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={currentUrl}>
  <meta property="twitter:title" content={fullTitle}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={`${siteUrl}/og-image.jpg`}>
  
  <!-- Canonical URL -->
  <link rel="canonical" href={currentUrl}>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white font-serif text-xl">
  <div class="flex flex-col lg:flex-row min-h-screen">
    <!-- Mobile header -->
    <div class="lg:hidden border-b border-gray-200 p-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold">Eric Pacuit</h1>
      <button id="mobile-menu-button" class="p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu overlay -->
    <div id="mobile-menu" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 lg:hidden">
      <div class="bg-white w-64 h-full p-6">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold">Menu</h1>
          <button id="close-menu-button" class="p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <nav class="space-y-2 text-2xl">
          <a href="/" class={`block px-3 py-2 rounded transition-colors ${
            activePage === 'home' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>Home</a>
          <a href="/publications" class={`block px-3 py-2 rounded transition-colors ${
            activePage === 'publications' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>Publications</a>
          <a href="/teaching" class={`block px-3 py-2 rounded transition-colors ${
            activePage === 'teaching' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>Teaching</a>
          <a href="/short-courses" class={`block pl-8 pr-3 py-2 rounded transition-colors ${
            activePage === 'short-courses' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>Short Courses</a>
          <a href="/tutorials" class={`block pl-8 pr-3 py-2 rounded transition-colors ${
            activePage === 'tutorials' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>Tutorials</a>
          <a href="/software" class={`block px-3 py-2 rounded transition-colors ${
            activePage === 'software' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>Software</a>
          <a href="https://www.dropbox.com/s/hg9nkw15b7ss1t6/pacuit-cv.pdf?dl=0" target="_blank" class={`block px-3 py-2 rounded transition-colors ${
            activePage === 'cv' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
          }`}>CV</a>
        </nav>
      </div>
    </div>
    
    <!-- Sidebar with MORE LEFT PADDING -->
    <aside class="hidden lg:block lg:w-80 pl-16 pr-0 py-8 flex-shrink-0">
      <h1 class="text-4xl font-bold mb-8">Eric Pacuit</h1>
      <nav class="space-y-2 text-2xl">
        <a href="/" class={`block px-4 py-2 rounded transition-colors ${
          activePage === 'home' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>Home</a>
        <a href="/publications" class={`block px-4 py-2 rounded transition-colors ${
          activePage === 'publications' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>Publications</a>
        <a href="/teaching" class={`block px-4 py-2 rounded transition-colors ${
          activePage === 'teaching' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>Teaching</a>
        <a href="/short-courses" class={`block pl-10 pr-4 py-2 rounded transition-colors ${
          activePage === 'short-courses' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>Short Courses</a>
        <a href="/tutorials" class={`block pl-10 pr-4 py-2 rounded transition-colors ${
          activePage === 'tutorials' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>Tutorials</a>
        <a href="/software" class={`block px-4 py-2 rounded transition-colors ${
          activePage === 'software' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>Software</a>
        <a href="https://www.dropbox.com/s/hg9nkw15b7ss1t6/pacuit-cv.pdf?dl=0" target="_blank" class={`block px-4 py-2 rounded transition-colors ${
          activePage === 'cv' ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'
        }`}>CV</a>
      </nav>
    </aside>
    
    <!-- Content -->
    <main class="flex-1 p-6 lg:pl-20 lg:pr-64 lg:py-12 lg:mt-12">
      <slot />
    </main>
  </div>
</body>
<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const closeMenuButton = document.getElementById('close-menu-button');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
  });
  
  closeMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
  });
  
  // Close menu when clicking outside
  mobileMenu?.addEventListener('click', (e) => {
    if (e.target === mobileMenu) {
      mobileMenu.classList.add('hidden');
    }
  });
</script>
</html>

<style>
  body {
    font-family: 'Source Serif 4', Georgia, serif;
  }
</style>